{
  "group": "Front-Channel Logout",
  "usage": {
    "front": true,
    "return_type": [
      "C",
      "CI",
      "CT",
      "CIT"
    ]
  },
  "desc": "Registers support for frontchannel logout and uses RP initiated logout to trigger the logout",
  "sequence": [
    {
      "Webfinger": {
        "set_webfinger_resource": null
      }
    },
    {
      "Discovery": {
        "set_discovery_issuer": null
      }
    },
    {
      "Registration": {
        "set_request_args": {
          "grant_types": [
            "authorization_code"
          ],
          "frontchannel_logout_session_required": true
        },
        "set_frontchannel_logout_uri": null
      }
    },
    {
      "AsyncAuthn": {
        "set_response_where": null,
        "set_request_args": {
          "scope": [
            "openid",
            "offline_access"
          ],
          "prompt": "consent"
        }
      }
    },
    {
      "AccessToken": {
        "conditional_execution": {
          "return_type": [
            "CIT",
            "CI",
            "C",
            "CT"
          ]
        }
      }
    },
    {
      "EndSession": {
        "set_post_logout_redirect_uri": null,
        "set_req_args_state": null,
        "set_op_args": {
          "add_state": true
        },
        "id_token_hint": null
      }
    },
    "FrontChannelLogout",
    "PostLogout",
    {
      "AsyncAuthn": {
        "set_response_where": null,
        "set_request_args": {
          "prompt": "none"
        },
        "set_expect_error": {
          "error": [
            "login_required",
            "interaction_required",
            "session_selection_required",
            "consent_required"
          ],
          "stop": false
        }
      }
    }
  ],
  "assert": {
    "verify-error-response": {
      "error": [
        "login_required",
        "interaction_required",
        "session_selection_required",
        "consent_required"
      ]
    }
  }
}
