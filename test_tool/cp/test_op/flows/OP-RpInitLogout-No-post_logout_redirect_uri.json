{
  "group": "RP-Initiated Logout",
  "usage": {
    "rp_init": true
  },
  "desc": "Uses RP initiated logout to end a Session at the OP.",
  "note": "After the logout you should end up at an OP page stating that you have been logged out. You must submit a screen shot of the final logout page",
  "sequence": [
    {
      "Webfinger": {
        "set_webfinger_resource": null
      }
    },
    {
      "Discovery": {
        "set_discovery_issuer": null
      }
    },
    {
      "Registration": {
        "set_request_args": {
          "grant_types": [
            "authorization_code"
          ]
        }
      }
    },
    {
      "AsyncAuthn": {
        "set_response_where": null,
        "set_request_args": {
          "scope": [
            "openid",
            "offline_access"
          ],
          "prompt": "consent"
        }
      }
    },
    {
      "AccessToken": {
        "conditional_execution": {
          "return_type": [
            "CIT",
            "CI",
            "C",
            "CT"
          ]
        }
      }
    },
    "Note",
    {
      "EndSession": {
        "set_req_args_state": null,
        "set_op_args": {
          "add_state": true
        },
        "id_token_hint": null
      }
    },
    "PostLogout",
    {
      "AsyncAuthn": {
        "set_response_where": null,
        "set_request_args": {
          "prompt": "none"
        },
        "set_expect_error": {
          "error": [
            "login_required",
            "interaction_required",
            "session_selection_required",
            "consent_required"
          ],
          "stop": false
        }
      }
    }
  ],
  "reference": [
    "https://openid.net/specs/openid-connect-session-1_0.html#RPLogout"
  ]
}
